# Basic Settings
set shell sh
map . set hidden!
set ignorecase true
set icons

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Bindings
map d
map m
map au unarchive

# Basic Functions
map . set hidden!
map p paste
map x cut
map y copy
map <enter> shell 
map R reload
map mf mkfile
map md mkdir
map C clear

# Movement
map gD cd ~/Documents
map gd cd ~/Downloads
map gc cd ~/.config

# CTPV - previewer
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id
